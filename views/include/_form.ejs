 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="lastname" class="text-light">Lastname</label>
            <input type="text" name="lastname" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="" placeholder="my_email@gmail.com">
        </div>
        <div class="form-group">
            <label for="phone_number" class="text-light">Phone Number</label>
            <input type="number" name="phone_number" value="" placeholder="06 00 00 00 00">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>